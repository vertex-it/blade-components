{
    "name": "vertex-it/blade-components",
    "description": "Laravel blade components",
    "keywords": [
        "vertex-it",
        "blade-components"
    ],
    "homepage": "https://github.com/vertex-it/blade-components",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Mile Panic",
            "email": "mile.panic96@gmail.com",
            "role": "Developer"
        },
        {
            "name": "Aleksandar Milivojsa",
            "email": "milivojsa96@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "blade-ui-kit/blade-heroicons": "^1.0.0",
        "illuminate/view": "^7.0|^8.0"
    },
    "require-dev": {
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "VertexIT\\BladeComponents\\": "src"
        },
        "files": [
            "src/Http/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "VertexIT\\BladeComponents\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "VertexIT\\BladeComponents\\BladeComponentsServiceProvider"
            ],
            "aliases": {
                "BladeComponents": "VertexIT\\BladeComponents\\BladeComponentsFacade"
            }
        }
    }
}
